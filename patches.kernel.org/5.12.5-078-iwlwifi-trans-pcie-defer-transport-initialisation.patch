-			return NULL;
-	}
+	WARN_ON(!ops->wait_txq_empty && !ops->wait_tx_queues_empty);
 
 	if (trans->trans_cfg->use_tfh) {
 		trans->txqs.tfd.addr_size = 64;
@@ -86,6 +53,52 @@ struct iwl_trans *iwl_trans_alloc(unsigned int priv_size,
